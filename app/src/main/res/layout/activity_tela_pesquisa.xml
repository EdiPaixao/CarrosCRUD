<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TelaPesquisa">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="DETALHE DO VEÍCULO"
                android:textColor="#B0000000"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/imgListaLogo"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/logo" />

            <Button
                android:id="@+id/btnSair"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#B0000000"
                android:text="voltar para listagem"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/imgMarca"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/txtPlaca"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtMarca"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtModelo"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtAno"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btnAlterar"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="#B0000000"
                android:text="Alterar"
                android:textColor="@android:color/background_light" />

            <Button
                android:id="@+id/btnDeletar"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:background="#9ECD0000"
                android:text="Excluir"
                android:textColor="@android:color/background_light" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>